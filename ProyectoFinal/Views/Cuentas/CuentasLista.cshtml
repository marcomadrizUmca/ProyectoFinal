@model List<ProyectoFinal.Models.sp_RetornaCuentas_Result>

@{
    ViewBag.Title = "CuentasLista";
}

<h2>Lista de Cuentas</h2>

<a href="~/Cuentas/CuentaNueva">Agregar una Cuenta Nueva</a>

<table class="table">
    <tr>
        <th>Cuenta</th>
        <th>Nombre</th>
        <th>Tipo de Cuenta</th>
        <th>Moneda</th>
        <th>Saldo</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>
    @{
        foreach (ProyectoFinal.Models.sp_RetornaCuentas_Result posicionModelo in this.Model)
        {
        <tr>
            <td>@posicionModelo.Numero_Cuenta</td>
            <td>@posicionModelo.NombreCliente @posicionModelo.ApellidoCliente @posicionModelo.SegundoApellido</td>
            <td>@posicionModelo.NombreCuenta</td>
            <td>@posicionModelo.NombreMonneda</td>
            <td>@posicionModelo.Saldo</td>
            <td>@posicionModelo.Estado</td>

            <td>
                <a href="~/Cuentas/CuentaModifica?Id_Cuenta=@posicionModelo.Id_Cuenta">Modificar</a>
                <br />
                <a href="~/Cuentas/CuentaElimina?Id_Cuenta=@posicionModelo.Id_Cuenta">Eliminar</a>
        </td>
</tr>
        }

    }


</table>
