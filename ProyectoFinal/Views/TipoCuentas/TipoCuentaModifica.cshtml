@model ProyectoFinal.Models.sp_RetornaTipos_Cuentas_Result

@{
    ViewBag.Title = "TipoCuentaModifica";
}

<link href="~/Content/CSS/CSSEliminar.css" rel="stylesheet" />
<div id="Centrar">

    <h2 style="opacity: 0.6">Modificar Cuentas</h2>

    <form id="frmModificaTipoCuentas" method="post">
        <div class="form-group">
            <label>Nombre:</label>
            <input type="text" id="Nombre" name="Nombre" class="form-control" value="@Model.Nombre" />
        </div>

        <div class="form-group">
            <label>Codigo:</label>
            <input type="text" name="Codigo" id="Codigo" class="form-control" value="@Model.Codigo" />
        </div>

        <div class="form-group">
            <input class="boton_personalizado" type="submit" value="Modificar" id="btnAceptar" />
            <a class="boton_personalizado" href="~/TipoCuentas/TipoCuentasLista">Regresar a la Lista</a>
        </div>


        


    </form>

    </div>

    @Html.ValidationSummary(true)
    @section scripts{
        <script src="~/Scripts/Validaciones/ClienteNuevo.js"></script>
    }
